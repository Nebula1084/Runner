<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="android:textColorPrimary">@color/black_button</item>
    </style>

    <style name="login_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/login_side_margin</item>
        <item name="android:layout_marginRight">@dimen/login_side_margin</item>
    </style>

    <style name="publish_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/publish_layout_item_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="user_layout_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/publish_layout_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="publsh_text_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black_button</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="publish_button_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/black_button</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="user_item_icon">
        <item name="android:layout_height">@dimen/publish_layout_item_height</item>
        <item name="android:layout_width">@dimen/publish_layout_item_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:tint">@color/md_black_1000</item>
    </style>

    <style name="user_text_item" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="task_item_icon">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/md_black_1000</item>
    </style>

    <style name="task_text_item" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
