<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.runner.test.TestTaskActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getTask"
        android:id="@+id/getTaskBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_gettask"
        android:layout_alignBottom="@+id/getTaskBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/getTaskBtn"
        android:layout_toStartOf="@+id/getTaskBtn"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_available"
        android:layout_below="@+id/editText_gettask"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/getTaskBtn"
        android:layout_toStartOf="@+id/getTaskBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="available"
        android:id="@+id/availableBtn"
        android:layout_below="@+id/getTaskBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_runnertask"
        android:layout_below="@+id/editText_available"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/availableBtn"
        android:layout_toStartOf="@+id/availableBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RunnerTask"
        android:id="@+id/runnerTaskBtn"
        android:layout_below="@+id/editText_available"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_publishertask"
        android:layout_below="@+id/editText_runnertask"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/runnerTaskBtn"
        android:layout_toStartOf="@+id/runnerTaskBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="publisherTask"
        android:id="@+id/publisherTaskBtn"
        android:layout_alignBottom="@+id/editText_publishertask"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_rate"
        android:layout_below="@+id/publisherTaskBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/publisherTaskBtn"
        android:layout_toStartOf="@+id/publisherTaskBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:id="@+id/rateBtn"
        android:layout_alignBottom="@+id/editText_rate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="publish"
        android:id="@+id/publishBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText_rate"
        android:layout_alignEnd="@+id/editText_rate"
        android:layout_marginRight="86dp"
        android:layout_marginEnd="86dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_accept"
        android:layout_below="@+id/editText_rate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_rate"
        android:layout_alignEnd="@+id/editText_rate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accept"
        android:id="@+id/acceptBtn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_gaincargo"
        android:layout_below="@+id/editText_accept"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_accept"
        android:layout_alignEnd="@+id/editText_accept"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gaincargo"
        android:id="@+id/gaincargoBtn"
        android:layout_alignBottom="@+id/editText_gaincargo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_delivercargo"
        android:layout_below="@+id/editText_gaincargo"
        android:layout_alignRight="@+id/publishBtn"
        android:layout_alignEnd="@+id/publishBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delivercargo"
        android:id="@+id/delivercargoBtn"
        android:layout_below="@+id/gaincargoBtn"
        android:layout_alignRight="@+id/acceptBtn"
        android:layout_alignEnd="@+id/acceptBtn"/>
</RelativeLayout>
